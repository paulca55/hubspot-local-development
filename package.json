{
  "name": "hubspot-local-development",
  "version": "1.0.0",
  "browserslist": [
    ">0.25%"
  ],
  "scripts": {
    "clean": "rimraf dist/{css/*,js/*,images/*}",
    "scss": "node-sass --output-style compressed -o dist/css src/scss",
    "scss:dev": "node-sass --source-map-embed true -o dist/css src/scss",
    "scripts": "parcel build src/js/scripts.js -d dist/js --no-source-maps",
    "scripts:dev": "parcel build src/js/scripts.js -d dist/js --no-minify",
    "autoprefixer": "postcss -u autoprefixer --no-map -r dist/css/**/*.css ",
    "autoprefixer:dev": "postcss -u autoprefixer -r dist/css/**/*.css ",
    "images": "imagemin-dir src/images dist/images",
    "server": "node browsersync.js",
    "css": "run-s scss autoprefixer",
    "css:dev": "run-s scss:dev autoprefixer:dev",
    "build": "run-s clean css scripts images",
    "build:dev": "run-s clean css:dev scripts:dev images",
    "watch:css": "onchange 'src/scss/**/*.scss' -- run-s css:dev",
    "watch:js": "onchange 'src/js/**/*.js' -- run-s scripts:dev",
    "watch:images": "onchange 'src/images' -- run-s images",
    "start": "run-p server watch:*"
  },
  "devDependencies": {
    "@hubspot/cms-cli": "^1.0.6",
    "autoprefixer": "^9.7.2",
    "browser-sync": "^2.26.7",
    "clean-css-cli": "^4.3.0",
    "del-cli": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "imagemin-cli": "^5.0.0",
    "imagemin-cli-preserve-dir-structure": "0.0.2",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0",
    "parcel-bundler": "^1.12.4",
    "postcss-cli": "^6.1.3",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "shelljs": "^0.8.3",
    "stylelint": "^12.0.1",
    "stylelint-config-prettier": "^8.0.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-prettier": "^1.1.2"
  }
}
