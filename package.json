{
  "name": "hubspot-local-development",
  "version": "1.0.0",
  "browserslist": [
    ">0.25%"
  ],
  "scripts": {
    "clean": "rimraf ./design-tools-files/{css/*,js/*,images/*}",
    "scss": "node-sass --source-map true -o ./design-tools-files/css ./src/scss",
    "scripts": "parcel build ./src/js/main.js -d ./design-tools-files/js --no-minify",
    "autoprefixer": "postcss -u autoprefixer -m -r ./design-tools-files/css/**/*.css ",
    "images": "imagemin ./src/images/* --out-dir=./design-tools-files/images",
    "server": "node browsersync.js",
    "css": "run-s scss autoprefixer",
    "build": "run-s clean css scripts images",
    "watch:css": "onchange './src/scss/**/*.scss' -- run-s css",
    "watch:js": "onchange './src/js/**/*.js' -- run-s scripts",
    "watch:images": "onchange './src/images' -- run-s images",
    "hs-watch": "npx hs watch ./design-tools-files hs-portal-folder",
    "start": "run-p server hs-watch watch:*"
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@hubspot/cms-cli": "^1.0.6",
    "autoprefixer": "^9.7.2",
    "browser-sync": "^2.26.7",
    "clean-css-cli": "^4.3.0",
    "del-cli": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "imagemin-cli": "^6.0.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0",
    "parcel-bundler": "^1.12.4",
    "postcss-cli": "^6.1.3",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "shelljs": "^0.8.3",
    "stylelint": "^12.0.1",
    "stylelint-config-prettier": "^8.0.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-prettier": "^1.1.2"
  }
}
