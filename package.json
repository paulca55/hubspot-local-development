{
  "name": "hubspot-local-development",
  "version": "1.0.0",
  "browserslist": [
    ">0.25%"
  ],
  "scripts": {
    "clean": "rimraf ./dist/{css/*,js/*,images/*}",
    "scss": "node-sass --output-style compressed --source-map true -o ./dist/css ./src/scss",
    "scripts": "parcel build ./src/js/scripts.js -d ./dist/js",
    "autoprefixer": "postcss -u autoprefixer -m -r ./dist/css/**/*.css ",
    "images": "imagemin ./src/images/* --out-dir=./dist/images",
    "server": "node browsersync.js",
    "css": "run-s scss autoprefixer",
    "build": "run-s clean css scripts images",
    "watch:css": "onchange './src/scss/**/*.scss' -- run-s css",
    "watch:js": "onchange './src/js/**/*.js' -- run-s scripts",
    "watch:images": "onchange './src/images' -- run-s images",
    "hs-watch": "npx hs watch ./dist dist",
    "start": "run-p server hs-watch watch:*"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@hubspot/cms-cli": "^2.2.2",
    "autoprefixer": "^9.8.6",
    "browser-sync": "^2.26.13",
    "clean-css-cli": "^4.3.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "imagemin-cli": "^6.0.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.1",
    "parcel-bundler": "^1.12.4",
    "postcss-cli": "^6.1.3",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "stylelint": "^12.0.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-prettier": "^1.1.2"
  }
}
